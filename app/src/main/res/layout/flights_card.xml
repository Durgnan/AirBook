<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flight Id"
        android:layout_centerVertical="true"
        android:id="@+id/flight_id"
        android:layout_marginTop="10dp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_toStartOf="@+id/c1"
        android:layout_toLeftOf="@+id/c1"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ETD"
            android:id="@+id/flight_etd"
            android:layout_centerHorizontal="true"
            android:paddingHorizontal="2dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source"
            android:paddingHorizontal="2dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/flight_etd"
            android:id="@+id/flight_source"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/c1"
        android:layout_toRightOf="@+id/c1"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ETA"
            android:id="@+id/flight_eta"
            android:layout_centerHorizontal="true"
            android:paddingHorizontal="2dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination"
            android:paddingHorizontal="2dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/flight_eta"
            android:id="@+id/flight_destination"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>
       <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c1"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:layout_centerHorizontal="true"
            android:id="@+id/flight_duration"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flight_duration"
            android:layout_above="@+id/flight_stop"
            android:layout_marginVertical="15dp"
            android:padding="15dp"
            android:src="@drawable/ic_flight_takeoff_black_24dp"
            android:layout_centerInParent="true"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stops"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/flight_duration"
            android:id="@+id/flight_stop"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_alignBottom="@+id/c1"
        android:paddingVertical="20dp"
        android:layout_height="1dp"
        android:background="#000000"/>

</RelativeLayout>